#!/bin/sh
# Wrapper for Chrome inside the blobevm image to ensure writable XDG dirs
export XDG_CONFIG_HOME=/tmp/.config
LOG_PATH="${CHROME_LOG:-$HOME/.cache/google-chrome-launch.log}"
mkdir -p "$(dirname "$LOG_PATH")" || true
exec /usr/bin/google-chrome-stable --no-sandbox --disable-gpu --disable-software-rasterizer --disable-dev-shm-usage --disable-setuid-sandbox --disable-breakpad --no-first-run --disable-extensions "$@" >> "$LOG_PATH" 2>&1
